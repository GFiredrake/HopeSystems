@{
    ViewBag.Title = "HeaderAdvertCarousel";
}

<h2>Header Advert Carousel</h2> 

<p><button id="modal_open">Create New Carousel Item</button></p>

<div id="modal_wrapper">
    <div id="modal_window">

        <div style="text-align: right;"><a id="modal_close" href="#">close <b>X</b></a></div>

        <p>Complete the form below to send an email:</p>

        <form id="modal_feedback" method="POST" action="SaveNewAdvertCarouselData" accept-charset="UTF-8">
            <p>
                <label>
                    Alt text<br>
                    <input type="text" size="48" name="subject" value="">
                </label>
            </p>
            <p>
                <label>
                    Display Order<br>
                    <input type="text" size="48" name="subject" value="">
                </label>
            </p>
            <p>
                <label>
                    Display Start Date<br>
                    <input type="text" size="48" name="subject" value="">
                </label>
            </p>
            <p>
                <label>
                    Display End Date <strong>*</strong><br>
                    <input type="text" size="48" name="subject" value="">
                </label>
            </p>
            <p><input type="submit" name="feedbackForm" value="Save"></p>
        </form>

    </div> <!-- #modal_window -->
</div> <!-- #modal_wrapper -->


<div id="MainInfoDiv">
   <div class="HiddenDiv" id="dropdownNumbers"></div> 
     
</div>

@section scripts {
    @Scripts.Render("~/Content/Scripts/HeaderAdvertCarousel.js")
}