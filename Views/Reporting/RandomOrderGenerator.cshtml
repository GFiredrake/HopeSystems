<div id="SkuDiv" class="HiddenDiv">
    SKU:
    <input type="number" name="skuInput" id="SkuInput" max="999999" MaxLength="6" pattern="[0-9]*"><br>
    <div id="ErrorDiv" class="errorDiv HiddenDiv">That is not a valid SKU length.</div>
    <br>
</div>
<br>
<br>
<button class="generateButton" id="GenerateButton" onclick="GenerateRandomOrder()">Generate Report</button>

<div id="TableArea">
        <table id="DisplayTable"></table>
</div>

