<!DOCTYPE html>
<html>
<head>
   
    <meta http-equiv="content-type" content="application/xhtml+xml; charset=UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Hope:Tools - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Content/Scripts/jquery-ui.js")
    @RenderSection("css", false)
    <link rel="icon" href="favicon.ico" type="image/x-icon">
</head>

<body>
    <div id="container">
        <div id="header"></div>
        <div id="body">
            <div id="MenuDiv">
                <div id="BannerDiv">
                    <a href="http://hope.tools/">
                        <img src="~/Content/Images/hope-tools.png" />
                    </a>
                </div>
                <div id="buttonDiv">
                    @Html.Raw(ViewBag.MenuHtml)
                </div>
            </div>
            <div id="MainDiv">
                @RenderBody()
            </div>
        </div>
        <div id="extenderDiv"></div>
        <div id="footer">Powered by hope:tools   <a href="~/monitoring/index"> &#120587;</a></div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryUi")
    @RenderSection("scripts", required: false)
</body>
</html>
